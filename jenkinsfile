pipeline {
    agent any
    tools {nodejs "node"}

    stages {
        stage('npm install') {
            steps {
                sh 'cd hypertime-frontend && npm install && cd ..'
               
            }
            
        }
        stage('builds') {
            steps {
                bat 'npm run build'
            }
        }
        stage('tests') {
            steps {
                bat 'npm run test'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}